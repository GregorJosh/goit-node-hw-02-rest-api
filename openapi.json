  "components": {
    "schemas": {
      "User": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john.doe@email.com"
          },
          "password": {
            "type": "string",
            "pattern": "/^(?=.*[a-z]+)(?=.*[A-Z]+)(?=.*[0-9]+)(?=.*[-+*_]+).{8,}/",
            "example": "Password-1234"
          },
          "subscription": {
            "type": "string",
            "enum": [
              "starter",
              "pro",
              "business"
            ],
            "example": "starter",
            "default": "starter"
          },
          "token": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "Contact": {
        "required": [
          "name",
          "email",
          "phone"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 3,
            "pattern": "/^[a-zA-ZąęćłńóśźżĄĘĆŁŃÓŚŹŻ ']+$/",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "minLength": 3,
            "pattern": "/^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$/",
            "example": "john.doe@email.com"
          },
          "phone": {
            "type": "string",
            "minLength": 5,
            "pattern": "/^[\\d\\+\\-()]+$/",
            "example": "+48 123 456 789"
          },
          "favorite": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Success": {
        "required": [
          "status",
          "code",
          "message"
        ],
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Error": {
        "required": [
          "status",
          "code",
          "message",
          "data"
        ],
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
